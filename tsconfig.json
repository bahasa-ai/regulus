{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2015.promise",
      "es2016.array.include"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [
    "node_modules", 
    "**/__tests__/*", 
    "dist"
  ]
}