{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2015.promise",
      "es2016.array.include"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "typeRoots": [
      "src/Types/index.ts"
    ]
  },
  "exclude": [
    "node_modules", 
    "**/__tests__/*", 
    "dist",
    "src/Types/index.ts"
  ]
}